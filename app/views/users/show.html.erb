<div class="max-5-xl mx-auto pb-8 rounder shadow-xl border">
  <div class="px-6 py-10 rounded-t-xl bg-gray-50">
    <h1 class="text-3x font-extrabold text-center">
      <%= @user.name %>'s Booking Page
    </h1>
    <p class="text-center text-gray-600 mt-2">Book your preferred time slot using the booking options below.</p>
  </div>
  <div class="gird grid-cols-3 gap-6 px08 pt-8">
    <% @user.booking_types.each do |booking_type| %>
      <% render "user/booking_type", booking_type: booking_type %>
    <% end %>
  </div>
</div>
